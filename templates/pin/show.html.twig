{% extends 'base.html.twig' %}

{% block title pin.title %}

{% block body %}
    <article>
        <h2>{{ pin.title }}</h2>
        <p>{{ pin.description }}</p>
    </article>
    <a href='{{ path('app_pin_update', {'id': pin.id}) }}'>Edit</a>|
    <a href='#' onclick='event.preventDefault(); confirm("Are you sure ?") && document.getElementById("js-pin-delete-form").submit();'>Delete</a>|
    <a href='{{ path('app_home') }}'>Go back</a>

    <form id='js-pin-delete-form' method="post" action="{{ path('app_pin_delete', {'id': pin.id}) }}">
        <input type='hidden' name='_csrf_token' value="{{ csrf_token('pin_deletion_' ~ pin.id) }}"/>
        <input type='hidden' name='_method' value='DELETE'/>
    </form>
{% endblock %}
