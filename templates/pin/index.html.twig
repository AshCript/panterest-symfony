{% extends 'base.html.twig' %}

{% block title 'All the great pins on the world!' %}

{% block body %}
    <h1> {{ pluralize(pins|length, 'pin') }}</h1>
    {% for pin in pins %}
        <article>
            <h2><a href="{{ path('app_pin_show', {'id': pin.id})}}">{{ pin.title }}</a></h2>
            <p>{{ truncate(pin.description) }}</p> {# or if use of u filter : pin.description | u.truncate(10, '...') #}
            <p><mute>Submitted : {{ pin.createdAt | ago }}</mute></p>
        </article>
    {% else %}
            <p>Sorry, no pins yet!</p>
    {% endfor %}
{% endblock %}
