{% extends 'base.html.twig' %}

{% block title 'All the great pins on the world!' %}

{% block body %}
    <h1> {{ pluralize(pins|length, 'pin') }}</h1>
    {% for pin in pins %}
        <article>
            <h2>{{ pin.title }}</h2>
            <p>{{ pin.description }}</p>
        </article>
    {% else %}
            <p>Sorry, no pins yet!
    {% endfor %}
{% endblock %}
